{
    "env": {
        "commonjs": true,
        "es2021": true,
        "node": true,
        "jest":true
    },
    "extends": [
        "airbnb-base"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12
    },
    "plugins": [
        "@typescript-eslint",
        "plugin:prettier/recommended",
    "prettier/@typescript-eslint",
    "plugin:@typescript-eslint/recommended"
    ],
    "ignorePatterns": "build",
  "rules": {
    "prettier/prettier": "error",
    "simple-import-sort/sort": "warn"}
}
